{
  "name": "GitHub Kanban",
  "version": "0.1",
  "description": "Kanban Board for GitHub",
  "manifest_version": 2,
  "icons" : {
      "16" : "images/icon16.png",
      "48" : "images/icon48.png",
      "128" : "images/icon128.png"
    },
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    "github/github.js",
    "main.js",
    "main.css"
  ]
}
